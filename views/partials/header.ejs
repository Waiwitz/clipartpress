          <a class="nav-link" href="/cart">
            <!-- <span class="badge badge-pill bg-danger">1</span> -->
            <span><i class="fas fa-shopping-cart">
                <% if(cartCount > 0) { %>
                <span class="badge rounded-pill badge-notification bg-danger"><%= cartCount %></span>
                <% } %>
              </i>
            </span>
          </a>
          <% } %>
