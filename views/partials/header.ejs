          <a class="nav-link" href="/register">
            <i class="fas fa-user-plus align-self-center "></i>
            <span>สมัครสมาชิก</span>
          </a>
        </li>
      </ul>
      <% } else if(login === true) { %>
      <ul class="navbar-nav">
        <li class="nav-item me-5 mt-2">
          <% if (session.role == 1) { %>
          <a class="nav-link" href="/admin/dashborad">
            <i class="fa-solid fa-hammer"></i>
