<div class="nav-space"></div>

<script>
  $(document).ready(function () {
    $('#navbarSupportedContent').hide();
  });


  $(document).ready(function () {
    $('#button').click(function () {
      if ($('.text').is(':hidden')) {
        $('.text').show();
      } else {
        $('.text').hide();
      }
    });
  });

  $('.navbar-toggler').on('click', function () {
    if ($('#navbarSupportedContent').is(':hidden')) {
      $('#navbarSupportedContent').show();
    } else {
      $('#navbarSupportedContent').hide();
    }
  })
</script>