      <!-- Left links -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item me-2 mt-2">
          <a class="nav-link <%= currentMenu == 'หน้าแรก' ? 'active' : ''%>" aria-current="page" href="/">หน้าแรก</a>
