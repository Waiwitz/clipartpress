<body>
    <%- include('../partials/header') %>

    <div class="container-lg mt-5 mb-5 p-auto">

        <h3 class="mb-3">เปลี่ยนรหัสผ่าน</h3>
        <% if(success_msg != "") { %>
        <% success_msg.forEach((item) => { %>
        <div class="alert alert-success">
            <%- item %>
        </div>
        <% }); %>
        <% }else if(errors != "") {%>
        <% errors.forEach((item) => { %>
        <div class="alert alert-danger">
            <%- item %>
        </div>
        <% }); %>
        <% } %>
        <% if(session.verified == 0) { %>
        <div class="alert alert-warning">
            บัญชีของคุณยังไม่ได้ยืนยัน <a href="#">ส่งอีเมลยืนยันอีกครั้ง</a>
        </div>
        <% } %>
        <div class="d-flex">
            <%- include('../partials/usermenu') %>
            <div class="setting-box">
                <div class="w-50">
                    <form action="/changepassword" method="post" class="needs-validation" novalidate>
                        <div class="form-outline mb-4">
                            <input type="password" id="form1Example1" class="form-control" name="currentPassword"  minlength="6"
                                required />
                            <label class="form-label" for="form1Example1">รหัสผ่านเก่า</label>
                            <div class="invalid-feedback">
                                กรุณากรอกรหัสผ่านเก่า
                            </div>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" id="form1Example2" class="form-control" name="newPassword"  minlength="6"
                                required />
                            <label class="form-label" for="form1Example2">รหัสผ่านใหม่</label>
                            <div class="invalid-feedback">
                                กรุณากรอกรหัสผ่านใหม่
                            </div>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" id="form1Example2" class="form-control" name="confirmPassword" minlength="6"
                                required />
                            <label class="form-label" for="form1Example2">ยืนยันรหัสผ่านใหม่</label>
                            <div class="invalid-feedback">
                                กรุณายืนยันรหัสผ่านใหม่
                            </div>
                        </div>
                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mt-5">ยืนยัน</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    document.querySelectorAll('.form-outline').forEach((formOutline) => {
        new mdb.Input(formOutline).init();
    });
</script>
<%- include('../partials/footer') %>
<%- include('../partials/chat') %>