<%- include('../partials/header') %>

<style>
</style>
<div class="container-lg mt-5 mb-5 p-auto w-50">
    <% if(errors != "") {%>
    <% errors.forEach((item) => { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong><%- item %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% }); %>
    <% } %>
    <div class="card m-auto">
        <div class="card-body">
            <h3 class="mb-5">สมัครสมาชิก</h3>
            <form class="needs-validation" action="/register" method="POST" novalidate>
                <!-- Email input -->
                <div class="d-flex my-3">
                    <div class="w-100">
                        <div class="form-outline mb-4">
                            <input type="text" id="username" name="username" class="form-control"
                                pattern="[A-Za-z]+[0-9]+{15}" required />
                            <label class="form-label" for="form1Example1">ชื่อผู้ใช้</label>
                            <div class="invalid-feedback">
                                ชื่อผู้ใช้ต้องเป็นอักขระและตัวเลขไม่เกิน 15 ตัวอักษร
                            </div>
                        </div>
                    </div>
                    <span class="text-danger ms-2">*</span>
                </div>

                <!-- Password input -->
                <div class="d-flex  my-3">
                    <div class="w-100">
                        <div class="form-outline mb-4">
                            <input type="password" id="password" name="password" class="form-control" 
                                pattern="[A-Za-z0-9]+" required />
                            <label class="form-label" for="form1Example2">รหัสผ่าน</label>
                            <div class="invalid-feedback">
                                รหัสผ่านต้องเป็นอักขระและตัวเลขเท่านั้น
                            </div>
                        </div>
                    </div>
                    <span class="text-danger ms-2">*</span>
                </div>

                <!-- ยินยันรหัส input -->
                <div class="d-flex  my-3">
                    <div class="w-100">
                        <div class="form-outline mb-4">
                            <input type="password" id="confirmpassword" name="confirmpassword" class="form-control"
                                required  pattern="[A-Za-z0-9]+"/>
                            <label class="form-label" for="form1Example2">ยืนยันรหัสผ่าน</label>
                            <div class="invalid-feedback">
                                กรุณายืนยันรหัสผ่าน
                            </div>
                        </div>
                    </div>
                    <span class="text-danger ms-2">*</span>
                </div>
                <!-- อีเมล input -->
                <div class="d-flex my-3">
                    <div class="w-100">
                        <div class="form-outline mb-4">
                            <input type="email" id="email" name="email" class="form-control" 
                                required />
                            <label class="form-label" for="form1Example2">อีเมล</label>
                            <div class="invalid-feedback">
                                รูปแบบอีเมลไม่ถูกต้อง
                            </div>
                        </div>
                    </div>
                    <span class="text-danger ms-2">*</span>
                </div>

                <div class="d-flex my-3">
                    <div class="w-100">
                        <div class="form-outline mb-4">
                            <input type="text" id="name" name="name" class="form-control" required
                                pattern="[A-Za-z ]+" />
                            <label class="form-label" for="form1Example2">ชื่อ-นามสกุล</label>
                            <div class="invalid-feedback">
                                ชื่อนามสกุลต้องเป็นอักขระ
                            </div>
                        </div>
                    </div>
                    <span class="text-danger ms-2">*</span>
                </div>

                <div class="d-flex my-3">
                    <div class="w-100">
                        <div class="form-outline mb-4">
                            <input type="tel" id="tel" name="telephone" class="form-control" required
                                pattern="[0-9]{10}" maxlength="10" />
                            <label class="form-label" for="form1Example2">เบอร์โทรศัพท์</label>
                            <div class="invalid-feedback">
                                เบอร์โทรศัพท์ต้องเป็นตัวเลขเท่านั้น
                            </div>
                        </div>
                    </div>
                    <span class="text-danger ms-2">*</span>
                </div>

                <!-- <div class="d-flex">
                <div class="w-100">
                    <div class="form-outline mb-4">
                        <input type="text" id="lineid" name="lineid" class="form-control" value="0222222222" />
                        <label class="form-label" for="form1Example2">ไอดีไลน์</label>
                    </div>
                    <span class="text-danger ms-3"></span>
                </div>
            </div> -->

                <!-- 2 column grid layout for inline styling -->
                <div class="d-flex my-3">
                    <div class="w-100">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="" required />
                            <label class="form-check-label"
                                for="form1Example3">ฉันได้อ่านและยอมรับนโยบายความเป็นส่วนตัวแล้ว</label>
                        </div>
                    </div>
                </div>


                <!-- Submit button -->
                <% if (locals.register_error) {  %>
                <%   register_error.forEach(function(error_msg){ %>
                <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                <% });
              } %>
                <button type="submit" class="btn btn-primary btn-block">สมัครสมาชิก</button>
            </form>
        </div>
    </div>
</div>
<script>

    
    document.querySelectorAll('.form-outline').forEach((formOutline) => {
        new mdb.Input(formOutline).init();
    });

</script>
<%- include('../partials/footer') %>