<%- include('../partials/header') %>
<div class="container-lg mt-5 mb-5 p-auto w-50">
    <% if(errors != "") { %>
        <% errors.forEach((item) => { %>
            <div class="alert alert-danger">
                <%- item %>
            </div>
        <% }); %>
    <% } %>
    <h3 class="mb-5">สมัครสมาชิก</h3>
    <div class="m-auto">
        <form action="/register" method="POST">
            <!-- Email input -->
            <div class="form-outline mb-4">
                <input type="text" id="username" name="username"
                    value="test" class="form-control" />
                <label class="form-label" for="form1Example1">ชื่อผู้ใช้</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <input type="password" id="password" name="password" class="form-control"  value="123456"/>
                <label class="form-label" for="form1Example2">รหัสผ่าน</label>
            </div>
            <!-- ยินยันรหัส input -->
            <div class="form-outline mb-4">
                <input type="password" id="confirmpassword" name="confirmpassword" class="form-control" value="123456"/>
                <label class="form-label" for="form1Example2">ยืนยันรหัสผ่าน</label>
            </div>
            <!-- อีเมล input -->
            <div class="form-outline mb-4">
                <input type="email" id="email" name="email" class="form-control"
                    value="test@gmail.com" />
                <label class="form-label" for="form1Example2">อีเมล</label>
            </div>

            <div class="form-outline mb-4">
                <input type="text" id="name" name="name" class="form-control" value="test test"/>
                <label class="form-label" for="form1Example2">ชื่อ-นามสกุล</label>
            </div>

            <div class="form-outline mb-4">
                <input type="tel" id="tel" name="telephone" class="form-control" value="0222222222"/>
                <label class="form-label" for="form1Example2">เบอร์โทรศัพท์</label>
            </div>

            <div class="form-outline mb-4">
                <input type="text" id="lineid" name="lineid" class="form-control" value="0222222222"/>
                <label class="form-label" for="form1Example2">ไอดีไลน์</label>
            </div>
            <!-- 2 column grid layout for inline styling -->
            <div class="row mb-4">
                <div class="col d-flex">
                    <!-- Checkbox -->
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="" required/>
                        <label class="form-check-label" for="form1Example3">ฉันได้อ่านและยอมรับ นโยบายความเป็นส่วนตัว
                            แล้ว</label>
                    </div>
                </div>
            </div>

            <!-- Submit button -->
            <% if (locals.register_error) {  %>
                <%   register_error.forEach(function(error_msg){ %>
            <div class="alert alert-danger" role="alert"><%= error_msg %></div>
            <% });
              } %>


            <button type="submit" class="btn btn-primary btn-block">สมัครสมาชิก</button>
        </form>
    </div>
</div>
<%- include('../partials/footer') %>