    </div>
  </div>
  <script>
    $(document).ready(function () {
      $(".cate-button").on("click", function () {
        const targetSection = $(this).data("target");
        $(".cate-button").removeClass("cate-active");
        $(this).addClass("cate-active");
        $(".itemlist").hide();
        $("#" + targetSection).show();
      });
    });
  </script>
