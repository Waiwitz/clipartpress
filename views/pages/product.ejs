  <script>
   $(document).ready(function () {
    $(".cate-button").on("click", function () {
      const targetSection = $(this).data("target");
      $(".cate-button").removeClass("active");
      $(this).addClass("active");
      $(".itemlist").hide();
      $("#" + targetSection).show();
    });
  });
  </script>
