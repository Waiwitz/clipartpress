  <div class="container-lg mt-5">
    <div style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">หน้าแรก</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= currentMenu %></li>
      </ol>
    </div>

    <div class="mt-3">
      <h3>งานพิมพ์</h3>
      <div class="d-flex mb-5">
        <!-- ประเภท -->
        <div class="list-group" style="width: 230px;">
          <div href="/product/all"
            class="list-group-item list-group-item-action cate-button"
            data-target="allSection">สินค้าทั้งหมด</div>
          <div class="list-group-item list-group-item-action cate-button" data-target="cardSection">นามบัตร</div>
          <div class="list-group-item list-group-item-action cate-button" data-target="flyerSection">ใบปลิว</div>
          <div class="list-group-item list-group-item-action cate-button" data-target="leafletSection">แผ่บพับ</div>
          <div class="list-group-item list-group-item-action cate-button" data-target="stickerSection">สติ๊กเกอร์</div>
          <div class="list-group-item list-group-item-action cate-button" data-target="billSection">ใบบิล</div>
